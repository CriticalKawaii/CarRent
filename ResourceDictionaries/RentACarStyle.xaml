<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:WpfApp"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d">

    <ResourceDictionary.MergedDictionaries>
        <materialDesign:BundledTheme BaseTheme="Light"
                                     PrimaryColor="DeepPurple"
                                     SecondaryColor="Amber" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TabRadioButtonBottom"
           BasedOn="{StaticResource MaterialDesignTabRadioButtonBottom}"
           TargetType="RadioButton">
        <Setter Property="Height"
                Value="50" />
        <Setter Property="FontWeight"
                Value="Bold" />
        <Setter Property="FontSize"
                Value="20" />
        <Setter Property="Foreground"
                Value="White" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Foreground"
                        Value="{DynamicResource MaterialDesign.Brush.Secondary.Dark}" />
                <Setter Property="BorderBrush"
                        Value="{DynamicResource MaterialDesign.Brush.Secondary.Dark}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="FloatingHintComboBox"
           BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}"
           TargetType="ComboBox">
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="Margin"
                Value="0, 10" />
    </Style>

    <Style x:Key="OutlinedComboBox"
           BasedOn="{StaticResource MaterialDesignOutlinedComboBox}"
           TargetType="ComboBox">
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="Margin"
                Value="0, 5" />
    </Style>

    <Style x:Key="FloatingHintTextBox"
           BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}"
           TargetType="TextBox">
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="Margin"
                Value="0, 10" />
    </Style>

    <Style x:Key="OutlinedTextBox"
           BasedOn="{StaticResource MaterialDesignOutlinedTextBox}"
           TargetType="TextBox">
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="Margin"
                Value="0, 5" />

    </Style>

    <Style x:Key="FloatingHintPasswordBox"
           BasedOn="{StaticResource MaterialDesignFloatingHintPasswordBox}"
           TargetType="PasswordBox">
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="Margin"
                Value="0, 10" />
    </Style>

    <Style x:Key="OutlinedPasswordBox"
           BasedOn="{StaticResource MaterialDesignOutlinedPasswordBox}"
           TargetType="PasswordBox">
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="Margin"
                Value="0, 5" />
    </Style>

    <Style x:Key="RevealPasswordCheckBox"
           BasedOn="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}"
           TargetType="CheckBox">
        <Style.Setters>
            <Setter Property="Foreground"
                    Value="{DynamicResource MaterialDesign.Brush.Primary.Light}" />
            <Setter Property="HorizontalAlignment"
                    Value="Right" />
            <Setter Property="Content">
                <Setter.Value>
                    <materialDesign:PackIcon Kind="EyeOff"
                                             VerticalAlignment="Center"
                                             Width="25"
                                             Height="20"
                                             Foreground="{DynamicResource MaterialDesign.Brush.Primary.Light}" />
                </Setter.Value>
            </Setter>
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsChecked"
                     Value="True">
                <Setter Property="Content">
                    <Setter.Value>
                        <materialDesign:PackIcon Kind="Eye"
                                                 Width="25"
                                                 Height="20" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="RaisedLightButton"
           BasedOn="{StaticResource MaterialDesignRaisedLightButton}"
           TargetType="Button">
        <Setter Property="Margin"
                Value="0, 10" />
        <Setter Property="Foreground"
                Value="White" />
    </Style>

    <Style x:Key="FlatLightButton"
           BasedOn="{StaticResource MaterialDesignFlatButton}"
           TargetType="Button">
        <Setter Property="Margin"
                Value="0, 10" />
    </Style>

    <Style x:Key="FloatingBorder"
           TargetType="Border">
        <Style.Setters>
            <Setter Property="Background"
                    Value="White" />
            <Setter Property="Padding"
                    Value="20" />
            <Setter Property="CornerRadius"
                    Value="30" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style.Setters>
    </Style>

    <DataTemplate x:Key="VehicleItemTemplate">
        <Border Background="{DynamicResource MaterialDesign.Brush.Secondary}"
                CornerRadius="26"
                Margin="5"
                Padding="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Vehicle Image -->
                <Border Grid.RowSpan="3"
                        Margin="0,0,10,0"
                        CornerRadius="22,0,0,22"
                        Height="135"
                        VerticalAlignment="Stretch">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding VehicleImage, TargetNullValue='/Resources/Images/car_placeholder.png'}"
                                    Stretch="UniformToFill" />
                    </Border.Background>
                </Border>

                <!-- Vehicle Details -->
                <TextBlock Grid.Column="1"
                           Padding="5"
                           Foreground="White"
                           TextWrapping="Wrap"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,1">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} {1} {2}">
                            <Binding Path="Make"
                                     TargetNullValue='Unknown Make' />
                            <Binding Path="Model"
                                     TargetNullValue='Unknown Model' />
                            <Binding Path="Year"
                                     TargetNullValue='N/A' />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <!-- Daily Rate -->
                <TextBlock Grid.Row="1"
                           Padding="5"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding DailyRate, TargetNullValue='Rate not available', StringFormat='{}{0:C}'}"
                           Style="{StaticResource MaterialDesignBody1TextBlock}" />

                <!-- Rating -->
                <materialDesign:RatingBar Grid.Row="2"
                                          Grid.Column="1"
                                          Value="{Binding AvgRating, TargetNullValue=0}"
                                          IsReadOnly="True"
                                          Background="{DynamicResource MaterialDesign.Brush.Secondary}"
                                          Foreground="{DynamicResource MaterialDesign.Brush.Secondary}" />
            </Grid>
        </Border>
    </DataTemplate>

    <Style x:Key="ItemContainerStyleRentACar"
           TargetType="ListViewItem"
           BasedOn="{StaticResource MaterialDesignListBoxItem}">
        <Setter Property="Margin"
                Value="5" />
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="HorizontalContentAlignment"
                Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">

                    <materialDesign:Card Margin="0"
                                         Background="{TemplateBinding Background}"
                                         SnapsToDevicePixels="True"
                                         BorderThickness="1"
                                         materialDesign:ElevationAssist.Elevation="Dp4"
                                         Padding="6"
                                         UniformCornerRadius="15">
                        <materialDesign:Ripple Focusable="False"
                                               Feedback="LightGray">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <materialDesign:Card Width="150"
                                        Height="100"
                                        UniformCornerRadius="17"
                                        ClipToBounds="True"
                                        Margin="2">
                                    <Image Source="{Binding VehicleImage, TargetNullValue='/Resources/Images/car_placeholder.png'}"
                                           Stretch="UniformToFill" />
                                </materialDesign:Card>

                                <StackPanel Grid.Column="1"
                                            Margin="10,0"
                                            VerticalAlignment="Center">
                                    <TextBlock FontSize="18"
                                               FontWeight="SemiBold">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} {1}">
                                                <Binding Path="Make"
                                                         TargetNullValue='Unknown' />
                                                <Binding Path="Model"
                                                         TargetNullValue='Model' />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>

                                    <TextBlock FontSize="14"
                                               Foreground="Gray"
                                               Margin="0,2,0,0"
                                               Text="{Binding Year, StringFormat='Year: {0}'}" />

                                    <TextBlock FontSize="16"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                                               Margin="0,6,0,0"
                                               FontWeight="Medium"
                                               Text="{Binding DailyRate, TargetNullValue='N/A', StringFormat='{}{0:C} в день'}" />

                                    <materialDesign:RatingBar Margin="0,8,0,0"
                                                              Value="{Binding AvgRating, TargetNullValue=0}"
                                                              IsReadOnly="True"
                                                              Foreground="{DynamicResource PrimaryHueMidBrush}" />
                                </StackPanel>
                            </Grid>
                        </materialDesign:Ripple>
                    </materialDesign:Card>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsSelected"
                     Value="True">
                <Setter Property="Background"
                        Value="#FFC5B3E2" />
            </Trigger>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Cursor"
                        Value="Hand" />
                <Setter Property="Background"
                        Value="#FFDECEFD" />
            </Trigger>
        </Style.Triggers>
    </Style>


</ResourceDictionary>

