<Page x:Class="WpfApp.Pages.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfApp.Pages"
      mc:Ignorable="d"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="AccountPage"
      FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid>
        <Border Margin="20"
                Style="{StaticResource FloatingBorder}"
                VerticalAlignment="Stretch">
            <StackPanel>
                <DockPanel>
                    <Button Style="{StaticResource FlatLightButton}"
                            HorizontalAlignment="Center"
                            Foreground="Red"
                            ToolTip="Выход"
                            Click="ButtonSignOut_Click">
                        <materialDesign:PackIcon Kind="SignOut"
                                                 Width="25"
                                                 Height="25" />
                    </Button>

                    <TextBlock d:Text="Личный кабинет"
                               VerticalAlignment="Center"
                               Text="{Binding Email, StringFormat='Личный кабинет {0}'}"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               DockPanel.Dock="Right" />
                </DockPanel>
                <TabControl>
                    <TabItem Header="Аренды"></TabItem>

                    <TabItem Header="Личные данные">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0"
                                     Text="{Binding Email}"
                                     materialDesign:HintAssist.Hint="E-mail"
                                     Style="{StaticResource FloatingHintTextBox}" />
                            <TextBox Grid.Row="1"
                                     Text="{Binding FirstName}"
                                     materialDesign:HintAssist.Hint="Имя"
                                     Style="{StaticResource FloatingHintTextBox}" />
                            <TextBox Grid.Row="2"
                                     Text="{Binding LastName}"
                                     materialDesign:HintAssist.Hint="Фамилия"
                                     Style="{StaticResource FloatingHintTextBox}" />
                            <TextBox Grid.Row="3"
                                     Text="{Binding PasswordHash}"
                                     materialDesign:HintAssist.Hint="Пароль"
                                     Style="{StaticResource FloatingHintTextBox}" />


                        </Grid>
                    </TabItem>

                    <TabItem Header="Отчеты"
                             Name="TabItemReports"
                             Visibility="Collapsed"
                             d:Visibility="Visible"></TabItem>
                    <TabItem x:Name="TabItemAdministration"
                             Header="Администрирование"
                             Visibility="Collapsed"
                             d:Visibility="Visible">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Button Margin="5"
                                        Content="Пользователи"
                                        Name="ButtonUsersPage"
                                        Click="ButtonUsersPage_Click" />
                                <Button Margin="5"
                                        Grid.Column="1"
                                        Content="Транспорт"
                                        Name="ButtonVehiclesPage"
                                        Click="ButtonVehiclesPage_Click" />
                                <Button Margin="5"
                                        Grid.Column="2"
                                        Content="Аренды"
                                        Name="ButtonBookingsPage"
                                        Click="ButtonBookingsPage_Click" />
                                <Button Margin="5"
                                        Grid.Column="3"
                                        Content="Отзывы"
                                        Name="ButtonReviewsPage"
                                        Click="ButtonReviewsPage_Click" />
                                <Button Margin="5"
                                        Grid.Column="4"
                                        Content="Оплаты"
                                        Name="ButtonPaymentsPage"
                                        Click="ButtonPaymentsPage_Click" />
                            </Grid>
                            <Frame Grid.Row="1"
                                   x:Name="frameAdmin"
                                   NavigationUIVisibility="Hidden" />
                        </Grid>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Border>
    </Grid>
</Page>
