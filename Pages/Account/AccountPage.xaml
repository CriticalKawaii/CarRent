<Page x:Class="WpfApp.Pages.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfApp.Pages"
      mc:Ignorable="d"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      d:DesignHeight="450"
      d:DesignWidth="1150"
      Title="AccountPage"
      d:Background="White"
      FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel>
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    BorderBrush="Red"
                    Margin="10"
                    HorizontalAlignment="Center"
                    Foreground="Red"
                    ToolTip="Выход"
                    Content="{materialDesign:PackIcon SignOut, Size=25}"
                    Click="ButtonSignOut_Click">
            </Button>

            <TextBlock d:Text="Личный кабинет"
                       VerticalAlignment="Center"
                       Text="{Binding Email, StringFormat='Личный кабинет {0}'}"
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       DockPanel.Dock="Right" />
        </DockPanel>
        <TabControl Grid.Row="1">
            <TabItem Header="Мои аренды">
                <Grid>
                    <DataGrid x:Name="DataGridUserBookings"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              d:ItemsSource="{d:SampleData ItemCount=8}">

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Фото"
                                                    MaxWidth="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding Vehicle.VehicleImageSource}"
                                               Stretch="UniformToFill"
                                               RenderOptions.BitmapScalingMode="HighQuality" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Автомобиль"
                                                    Width="*"
                                                    CanUserSort="True"
                                                    SortMemberPath="Vehicle.Make">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="{Binding Vehicle.Make}" />
                                            <Run Text="{Binding Vehicle.Model}" />
                                            <Run Text="{Binding Vehicle.Year}" />
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Начало"
                                                Binding="{Binding StartDate, StringFormat='{}{0:dd.MM.yyyy}'}"
                                                Width="*" />
                            <DataGridTextColumn Header="Окончание"
                                                Binding="{Binding EndDate, StringFormat='{}{0:dd.MM.yyyy}'}"
                                                Width="*" />
                            <DataGridTextColumn Header="Стоимость"
                                                Binding="{Binding TotalCost, StringFormat='{}{0:C}'}"
                                                Width="*" />
                            <DataGridTextColumn Header="Статус"
                                                Binding="{Binding BookingStatus.BookingStatus1}"
                                                Width="*" />
                            <!--MORE BUTTONS FOR BOOKING LOGIC-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button x:Name="ButtonReview"
                                                Click="ButtonReview_Click">
                                            <Button.Content>
                                                <materialDesign:PackIcon Kind="RateReview"
                                                                         Width="16"
                                                                         Height="16" />
                                            </Button.Content>
                                            <Button.Style>
                                                <Style TargetType="Button"
                                                       BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed" />
                                                    <Setter Property="IsEnabled"
                                                            Value="False" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding BookingStatus.BookingStatus1}"
                                                                     Value="Completed">
                                                            <Setter Property="IsEnabled"
                                                                    Value="True" />
                                                            <Setter Property="Visibility"
                                                                    Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock x:Name="TextBlockNoBookings"
                               Text="Нет аренд"
                               FontStyle="Italic"
                               Foreground="Gray"
                               Visibility="Collapsed"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Grid>
            </TabItem>

            <TabItem Header="Личные данные">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />

                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             Text="{Binding Email}"
                             Name="TextBoxEmail"
                             MaxLength="32"
                             materialDesign:TextFieldAssist.CharacterCounterVisibility="Hidden"
                             materialDesign:HintAssist.Hint="E-mail"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,8" />

                    <TextBox Grid.Row="1"
                             Text="{Binding FirstName}"
                             Name="TextBoxFirstName"
                             MaxLength="32"
                             materialDesign:TextFieldAssist.CharacterCounterVisibility="Hidden"
                             materialDesign:HintAssist.Hint="Имя"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,8" />

                    <TextBox Grid.Row="2"
                             Text="{Binding LastName}"
                             Name="TextBoxLastName"
                             MaxLength="32"
                             materialDesign:TextFieldAssist.CharacterCounterVisibility="Hidden"
                             materialDesign:HintAssist.Hint="Фамилия"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,8" />
                    <PasswordBox Grid.Row="3"
                                 Name="PasswordBoxNewPassword"
                                 MaxLength="64"
                                 materialDesign:TextFieldAssist.CharacterCounterVisibility="Hidden"
                                 materialDesign:HintAssist.Hint="Новый пароль (оставьте пустым, чтобы не менять)"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 Margin="0,8" />
                    <StackPanel Grid.Row="4"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button Content="Сохранить изменения"
                                Name="ButtonSaveUserData"
                                Click="ButtonSaveUserData_Click"
                                Style="{StaticResource RaisedLightButton}" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Отчеты"
                     Name="TabItemReports"
                     Visibility="Collapsed"
                     d:Visibility="Visible">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <ComboBox Name="ComboBoxVehicleCategory"
                                      SelectedIndex="0"
                                      Margin="5"
                                      materialDesign:ComboBoxAssist.ShowSelectedItem="False"
                                      DisplayMemberPath="VehicleCategory1"
                                      SelectionChanged="UpdateChart"
                                      Style="{StaticResource OutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="Категория авто" />
                            <ComboBox Name="ComboBoxDiagram"
                                      SelectedIndex="0"
                                      Margin="5"
                                      SelectionChanged="UpdateChart"
                                      Style="{StaticResource OutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="Диаграмма" />
                            <Button Content="{materialDesign:PackIcon Kind=MicrosoftWord,Size=25}"
                                    Margin="5"
                                    ToolTip="Экспорт в Microsoft Word"
                                    BorderThickness="0"
                                    Click="ButtonWord_Click"
                                    Background="#185abd" />
                            <Button Content="{materialDesign:PackIcon Kind=MicrosoftExcel,Size=25}"
                                    Margin="5"
                                    ToolTip="Экспорт в Microsoft Excel"
                                    BorderThickness="0"
                                    Background="#107c41"
                                    Click="ButtonExcel_Click" />
                        </StackPanel>
                    </StackPanel>
                    <WindowsFormsHost Grid.Row="1">
                        <charts:Chart x:Name="ChartBookings">
                            <charts:Chart.Legends>
                                <charts:Legend>

                                </charts:Legend>
                            </charts:Chart.Legends>
                        </charts:Chart>
                    </WindowsFormsHost>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabItemConfirmations"
                     Header="Подтверждения"
                     Visibility="Collapsed"
                     d:Visibility="Visible">
                <!--Can be two tabs here to managee payments and users-->
            </TabItem>
            <TabItem x:Name="TabItemAdministration"
                     Header="Администрирование"
                     Visibility="Collapsed"
                     d:Visibility="Visible">
                
                    <Frame Grid.Row="1"
                           x:Name="frameAdmin"
                           NavigationUIVisibility="Hidden" />
            </TabItem>
        </TabControl>
    </Grid>
</Page>
