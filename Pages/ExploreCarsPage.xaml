<Page x:Class="WpfApp.ExploreCarsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
      xmlns:local="clr-namespace:WpfApp"
      mc:Ignorable="d"
      Title="ExploreCarsPage"
      d:Height="550"
      d:Width="800">

    <Border Style="{StaticResource FloatingBorder}" Margin="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="420"
                                  MaxWidth="500" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBox x:Name="TextBoxSearch"
                     MaxLength="25"
                     TextChanged="TextBoxSearch_TextChanged"
                     Style="{StaticResource OutlinedTextBox}"
                     materialDesign:TextFieldAssist.HasClearButton="True">
                <materialDesign:HintAssist.Hint>
                    <materialDesign:PackIcon Kind="Search"
                                             VerticalAlignment="Center"
                                             Width="25"
                                             Height="25"
                                             Foreground="{DynamicResource MaterialDesign.Brush.Primary}" />
                </materialDesign:HintAssist.Hint>
            </TextBox>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="ComboBoxSort"
                          Style="{StaticResource OutlinedComboBox}"
                          ItemsSource="{Binding VehicleCategories}"
                          materialDesign:ComboBoxAssist.ShowSelectedItem="False"
                          DisplayMemberPath="VehicleCategory1"
                          SelectionChanged="ComboBoxSort_SelectionChanged">
                    <materialDesign:HintAssist.Hint>
                        <materialDesign:PackIcon Kind="Car"
                                                 VerticalAlignment="Center"
                                                 Width="25"
                                                 Height="25"
                                                 Foreground="{DynamicResource MaterialDesign.Brush.Primary}" />
                    </materialDesign:HintAssist.Hint>
                </ComboBox>
                <Button Click="ButtonRemove_Click"
                        Grid.Column="1"
                        Style="{StaticResource FlatLightButton}"
                        Width="70">
                    <materialDesign:PackIcon Kind="FilterOff"
                                             VerticalAlignment="Center"
                                             Width="25"
                                             Height="25"
                                             Foreground="{DynamicResource MaterialDesign.Brush.Primary}" />
                </Button>
            </Grid>

            <ListView x:Name="ListViewExploreCars"
                      materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True"
                      ScrollViewer.VerticalScrollBarVisibility="Visible"
                      Grid.Row="2"
                      ItemContainerStyle="{StaticResource ItemContainerStyleRentACar}"
                      Style="{StaticResource MaterialDesignListView}"
                      SelectionChanged="ListViewExploreCars_SelectionChanged"
                      SelectionMode="Single"
                      d:ItemsSource="{DynamicResource vehicles}"
                      d:SelectedIndex="0"
                      ScrollViewer.CanContentScroll="True"
                      UseLayoutRounding="True">

                <!--sample data-->
                <ListView.Resources>
                    <col:ArrayList x:Key="vehicles">
                        <local:Vehicle Make="Toyota"
                                       LicensePlate="aa777"
                                       AvgRating="5" />
                        <local:Vehicle Make="Ford"
                                       LicensePlate="bb777"
                                       AvgRating="4.2" />
                        <local:Vehicle Make="Volkswagen"
                                       LicensePlate="cc777"
                                       AvgRating="3.7" />
                        <local:Vehicle Make="Geely"
                                       LicensePlate="dd777" />
                    </col:ArrayList>
                </ListView.Resources>
            </ListView>

            <ScrollViewer Grid.Column="1"
                          Grid.RowSpan="3"
                          materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True">
                <StackPanel  Margin="5">
                    <Border Margin="5"
                            MaxHeight="400"
                            HorizontalAlignment="Center"
                            CornerRadius="20"
                            ClipToBounds="True">
                        <Image x:Name="imageVehicle"
                               Stretch="Uniform" />
                    </Border>

                    <TextBlock x:Name="textBlockMakeModel"
                               Typography.Capitals="SmallCaps"
                               TextWrapping="Wrap"
                               FontWeight="Bold"
                               Style="{DynamicResource MaterialDesignHeadline4TextBlock}" />
                    <TextBlock x:Name="textBlockLicensePlate"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}" />
                    <TextBlock x:Name="textBlockDailyRate"
                               FontSize="16" />
                    <TextBlock Text="Отзывы"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="10,20,10,5" />

                    <DataGrid x:Name="listBoxReviews" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
