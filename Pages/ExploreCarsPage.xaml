<Page x:Class="WpfApp.ExploreCarsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
      xmlns:local="clr-namespace:WpfApp"
      mc:Ignorable="d"
      Title="ExploreCarsPage"
      d:Height="550"
      d:Width="800"
      
      FontFamily="{materialDesign:MaterialDesignFont}">

    <Border  Style="{StaticResource FloatingBorder}" Margin="20" VerticalAlignment="Stretch">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="400"
                                  MaxWidth="420" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBox x:Name="TextBoxSearch"
                     MaxLength="25"
                     TextChanged="TextBoxSearch_TextChanged"
                     Style="{StaticResource OutlinedTextBox}"
                     materialDesign:TextFieldAssist.HasClearButton="True"
                     materialDesign:TextFieldAssist.ClearButtonSize="20">
                <materialDesign:HintAssist.Hint>
                    <materialDesign:PackIcon Kind="Search"
                                             VerticalAlignment="Center"
                                             Width="25"
                                             Height="25"
                                             Foreground="{DynamicResource MaterialDesign.Brush.Primary}" />
                </materialDesign:HintAssist.Hint>
            </TextBox>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="ComboBoxSort"
                          Style="{StaticResource OutlinedComboBox}"
                          ItemsSource="{Binding VehicleCategories}"
                          materialDesign:ComboBoxAssist.ShowSelectedItem="False"
                          DisplayMemberPath="VehicleCategory1"
                          SelectionChanged="ComboBoxSort_SelectionChanged">
                    <materialDesign:HintAssist.Hint>
                        <materialDesign:PackIcon Kind="Car"
                                                 VerticalAlignment="Center"
                                                 Width="25"
                                                 Height="25"
                                                 Foreground="{DynamicResource MaterialDesign.Brush.Primary}" />
                    </materialDesign:HintAssist.Hint>
                </ComboBox>
                
                <Button Click="ButtonRemove_Click"
                        Grid.Column="3"
                        Style="{StaticResource FlatLightButton}"
                        Width="70">
                    <materialDesign:PackIcon Kind="FilterOff"
                                             VerticalAlignment="Center"
                                             Width="25"
                                             Height="25"
                                             Foreground="{DynamicResource MaterialDesign.Brush.Primary}" />
                </Button>
            </Grid>

            <ListView x:Name="ListViewExploreCars"
                      materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True"
                      ScrollViewer.VerticalScrollBarVisibility="Visible"
                      Grid.Row="2"
                      ItemContainerStyle="{StaticResource ItemContainerStyleRentACar}"
                      Style="{StaticResource MaterialDesignListView}"
                      SelectionChanged="ListViewExploreCars_SelectionChanged"
                      SelectionMode="Single"
                      d:ItemsSource="{DynamicResource vehicles}"
                      d:SelectedIndex="0"
                      ScrollViewer.CanContentScroll="True"
                      UseLayoutRounding="True">

                <!--для дизайна-->
                <ListView.Resources>
                    <col:ArrayList x:Key="vehicles">
                        <local:Vehicle Make="Toyota"
                                       Year="2002"
                                       DailyRate="22.229"
                                       LicensePlate="aa777"
                                       AvgRating="5" 
                                       Model="Obunga"/>
                        <local:Vehicle Make="Ford"
                                       LicensePlate="bb777"
                                       AvgRating="4.2" />
                        <local:Vehicle Make="Volkswagen"
                                       LicensePlate="cc777"
                                       AvgRating="3.7" />
                        <local:Vehicle Make="Geely"
                                       LicensePlate="dd777" />
                    </col:ArrayList>
                </ListView.Resources>
                <!--для дизайна-->
            </ListView>
            
            <ScrollViewer Grid.Column="1"
                          Grid.RowSpan="3"
                          materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True">
                <StackPanel  Margin="5">
                    <Border Margin="5"
                            MaxHeight="400"
                            HorizontalAlignment="Center"
                            CornerRadius="20"
                            ClipToBounds="True">
                        <Image x:Name="imageVehicle"
                               Stretch="Uniform" />
                    </Border>

                    <TextBlock x:Name="textBlockMakeModel"
                               Typography.Capitals="SmallCaps"
                               TextWrapping="Wrap"
                               FontWeight="Bold"
                               Style="{DynamicResource MaterialDesignHeadline4TextBlock}" />
                    <TextBlock x:Name="textBlockLicensePlate"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}" />
                    <TextBlock x:Name="textBlockDailyRate"
                               FontSize="16" />
                    <Button Click="ButtonRent_Click"
                            Content="АРЕНДОВАТЬ"
                            HorizontalAlignment="Center"
                            Style="{StaticResource RaisedLightButton}"/>

                    <GroupBox Header="Отзывы" Style="{StaticResource MaterialDesignCardGroupBox}">
                        <ListView x:Name="ListViewReviews"
                                  d:ItemsSource="{d:SampleData ItemCount=5}"
                                  ScrollViewer.CanContentScroll="False"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Card Margin="8"
                                                         Padding="0"
                                                         UniformCornerRadius="4">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0"
                                                  Background="#FFF4F4F4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>


                                                <materialDesign:RatingBar Value="{Binding Rating}"
                                                                          IsReadOnly="True" />

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding CreatedAt, StringFormat={}{0:dd/MM/yyyy}}"
                                                           VerticalAlignment="Center"
                                                           Style="{StaticResource MaterialDesignCaptionTextBlock}" />
                                            </Grid>

                                            <StackPanel Grid.Row="1"
                                                        Margin="16">
                                                <TextBlock Text="{Binding Comment}"
                                                           TextWrapping="Wrap"
                                                           Style="{StaticResource MaterialDesignBody1TextBlock}" />
                                            </StackPanel>

                                            <Grid Grid.Row="2"
                                                  Background="{DynamicResource MaterialDesignDivider}">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Account"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,8,0" />
                                                    <TextBlock Text="{Binding User.Email}"
                                                               Style="{StaticResource MaterialDesignCaptionTextBlock}" />

                                                    <Separator Width="20"
                                                               Visibility="Hidden" />

                                                    <materialDesign:PackIcon Kind="Car"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,8,0" />
                                                    <TextBlock Text="{Binding VehicleID}"
                                                               Style="{StaticResource MaterialDesignCaptionTextBlock}" />
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </materialDesign:Card>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem"
                                       BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Stretch" />
                                    <Setter Property="Padding"
                                            Value="0" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
